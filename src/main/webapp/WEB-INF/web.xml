<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>SYOS POS System</display-name>
    <description>Point of Sale System - Web Application</description>

    <!-- Welcome files -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>

    <!-- Session configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>false</secure>
        </cookie-config>
    </session-config>

    <!-- Authentication Filter -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>org.syos.controller.filter.AuthenticationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/cashier/*</url-pattern>
        <url-pattern>/manager/*</url-pattern>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/customer/*</url-pattern>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>

    <!-- CORS Filter for AJAX requests -->
    <filter>
        <filter-name>CORSFilter</filter-name>
        <filter-class>org.syos.controller.filter.CORSFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CORSFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>

    <!-- Authentication Servlet -->
    <servlet>
        <servlet-name>AuthenticationServlet</servlet-name>
        <servlet-class>org.syos.controller.servlet.AuthenticationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AuthenticationServlet</servlet-name>
        <url-pattern>/api/auth/*</url-pattern>
    </servlet-mapping>

    <!-- Item Management Servlet -->
    <servlet>
        <servlet-name>ItemServlet</servlet-name>
        <servlet-class>org.syos.controller.servlet.ItemServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ItemServlet</servlet-name>
        <url-pattern>/api/items/*</url-pattern>
    </servlet-mapping>

    <!-- Billing Servlet -->
    <servlet>
        <servlet-name>BillingServlet</servlet-name>
        <servlet-class>org.syos.controller.servlet.BillingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BillingServlet</servlet-name>
        <url-pattern>/api/billing/*</url-pattern>
    </servlet-mapping>

    <!-- Stock Management Servlet -->
    <servlet>
        <servlet-name>StockServlet</servlet-name>
        <servlet-class>org.syos.controller.servlet.StockServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StockServlet</servlet-name>
        <url-pattern>/api/stock/*</url-pattern>
    </servlet-mapping>

    <!-- Customer Management Servlet -->
    <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>org.syos.controller.servlet.CustomerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/api/customers/*</url-pattern>
    </servlet-mapping>

    <!-- TODO: Additional servlets will be added as we implement them:
         - OnlineCustomerServlet for /api/online-customers/*
         - OrderServlet for /api/orders/*
         - ReportServlet for /api/reports/*
    -->

    <!-- Error pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.html</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/error/500.html</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error/500.html</location>
    </error-page>

</web-app>